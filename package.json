{
  "name": "gravyprompts",
  "version": "0.1.0",
  "private": true,
  "description": "Store, share, populate, and rate your AI prompt templates. The ultimate prompt management platform for AI enthusiasts and professionals.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "node scripts/setup-gravyjs.js",
    "dev": "next dev --turbopack",
    "dev:all": "./scripts/dev-all.sh",
    "build": "next build",
    "build:all": "npm run build && cd packages/gravyjs && npm run build",
    "start": "next start -p 6827",
    "start:next": "next start -p 6827",
    "start:demo": "cd packages/gravyjs-demo && npm run dev",
    "lint": "next lint",
    "build:cdk": "cd cdk && rm -f lib/*.d.ts lib/*.js && npm run build",
    "cdk:install": "cd cdk && npm install",
    "cdk:synth": "cd cdk && npx cdk synth",
    "deploy:foundation": "./scripts/deploy-foundation.sh",
    "deploy:cert:first": "./scripts/deploy-cert-first.sh",
    "check:cert": "./scripts/check-certificate.sh",
    "deploy:edge": "./scripts/deploy-edge-functions.sh",
    "deploy:waf": "./scripts/deploy-waf.sh",
    "deploy:cdn": "./scripts/deploy-cdn.sh",
    "deploy:app": "./scripts/deploy-app-content.sh",
    "deploy:monitoring": "./scripts/deploy-monitoring.sh",
    "deploy:auth": "./scripts/deploy-auth.sh",
    "deploy:api": "./scripts/deploy-api.sh",
    "deploy:all": "./scripts/deploy-all-amplify.sh",
    "deploy:backend": "./scripts/deploy-amplify-backend.sh",
    "status": "./scripts/check-stack-status.sh",
    "local:install": "cd cdk/local-test && npm install",
    "local:setup": "cd cdk/local-test && docker-compose up -d && sleep 5 && npm install && node setup-local-db.js",
    "local:start": "cd cdk/local-test && ./run-local.sh",
    "local:tables": "cd cdk/local-test && node setup-local-db.js",
    "local:api": "cd cdk/local-test && ./run-local.sh",
    "local:stop": "cd cdk/local-test && docker-compose down",
    "local:logs": "docker logs gravyprompts-dynamodb-local",
    "local:cleanup": "./scripts/cleanup-local.sh",
    "local:test": "cd cdk/local-test && ./test-api.sh",
    "local:test:api": "./scripts/test-local-api.sh",
    "local:test:unit": "cd cdk/lambda/templates && IS_LOCAL=true node local-test.js",
    "local:fix-auth": "./scripts/fix-local-auth.sh",
    "test:infra": "./scripts/test-infrastructure.sh",
    "pre-flight": "./scripts/pre-flight-check.sh",
    "status:all": "./scripts/check-all-stacks.sh",
    "destroy:waf": "./scripts/destroy-waf.sh",
    "destroy:monitoring": "./scripts/destroy-monitoring.sh",
    "destroy:all": "./scripts/destroy-all.sh",
    "destroy:frontend": "./scripts/destroy-frontend-stacks.sh",
    "maintenance:on": "./scripts/maintenance-mode.sh on",
    "maintenance:off": "./scripts/maintenance-mode.sh off",
    "maintenance:update": "./scripts/maintenance-mode.sh update",
    "amplify:setup": "echo 'Run AWS Amplify Console setup - see AMPLIFY_SETUP.md'",
    "deploy:force": "./scripts/force-update.sh",
    "todo": "./scripts/update-todos.sh show",
    "todo:add": "./scripts/update-todos.sh add",
    "todo:complete": "./scripts/update-todos.sh complete",
    "todo:progress": "./scripts/update-todos.sh progress",
    "demo:dev": "cd packages/gravyjs-demo && npm run dev",
    "demo:build": "cd packages/gravyjs-demo && npm run build",
    "demo:preview": "cd packages/gravyjs-demo && npm run preview",
    "demo:setup": "cd packages/gravyjs-demo && npm run setup",
    "demo:deploy": "cd packages/gravyjs-demo && npm run deploy",
    "demo:check:redirect": "cd packages/gravyjs-demo && npm run check:redirect",
    "demo:debug": "cd packages/gravyjs-demo && npm run debug",
    "check:amplify:app": "./scripts/check-amplify-app.sh",
    "check:amplify:dns": "./scripts/check-amplify-dns.sh",
    "check:amplify:domain": "./scripts/check-amplify-domain-status.sh",
    "diagnose:stack": "./scripts/diagnose-stack.sh",
    "protect:cert": "./scripts/protect-certificate.sh"
  },
  "dependencies": {
    "aws-amplify": "^6.15.0",
    "gravyjs": "*",
    "next": "^15.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.1.8",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.19.4",
    "typescript": "^5"
  }
}
